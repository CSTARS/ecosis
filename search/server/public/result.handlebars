<script id="result-template" type="text/x-handlebars-template">
  <div>
  	<div class="subnav subnav-fixed">
		<ul class="nav nav-pills">
			<li><a goto="metadata">Metadata</a></li>
			<li><a goto="customMetadata">Custom Metadata</a></li>
			<li><a goto="package">Data Package</a></li>
			<li><a goto="chart">Chart</a></li>
			<li><a goto="download">Download</a></li>
			<li><a id="result-back-btn" ><i class="icon-search icon-white"></i> Back to Search</a></li>
		</ul>
	</div>

	<h2>{{Name}}</h2>

	<div class='checkbox pull-right'>
		<label>
			<input type='checkbox' {{#if isChecked}}checked{{/if}} onclick='ESIS.compare.toggle(this);' class='select-{{_id}}' itemid='{{_id}}' itemname='{{title}}' /> Compare
		</label>
	</div>
	
	{{#if Description}}
		<h4>Description</h4>
		<div class="Description" style='margin-bottom:15px'>{{Description}}</div>
	{{/if}}
	
	<h4 id="metadata">Ecosis Metadata</h4>
	<div class="row-fluid">
		<div class="span6">
			<div id="result-main-left-panel"></div>
		</div>
		<div class="span6">
			<div id="result-main-right-panel"></div>
		</div>
	</div>

	<h4 id="customMetadata">Custom Data Package Metadata</h4>
	<div class="help-block">
		This metadata is specific to this dataset.  You can still filter on it's values, though you will probably filter out all other datasets as most will not have these attributes.
	</div>
	<div class="row-fluid" style='margin-bottom:15px'>
		<div class="span6">
			<div id="result-secondary-left-panel"></div>
		</div>
		<div class="span6">
			<div id="result-secondary-right-panel"></div>
		</div>
	</div>

	<h4 id="package">Data Package</h4>
	<div id="resources-link"></div>

	<h4 id="chart">Spectra</h4>
	<div class="well">
		<div id="result-chart-panel"></div>
		<a class="btn btn-default" id="print-chart" style="margin-top:10px"><i class="icon-print"></i> Printable Version</a>
	</div>
	
	<h4 id="download">Download</h4>
	<div id="result-export">
		<div class="form-inline" role="form">
		  <div class="form-group">
		    <label for="export-type">Separator</label>
			<select id="export-type" class="form-control">
				<option value="tab">Tab</option>
				<option value="comma">Comma</option>
				<option value="spaces">Spaces</option>
			</select>
		  </div>
		  <div class="checkbox">
		    <label>
		      <input type="checkbox" id="export-metadata" checked="checked" > Include Metadata
		    </label>
		  </div>
		  <a id="export-go" class="btn btn-primary"><i class='icon-download-alt'></i> Download</a>
		</div>
	</div>

	
  </div>
</script>